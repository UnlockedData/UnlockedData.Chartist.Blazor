@page "/SimpleBarInterpolation"

<h3>Simple Bar</h3>

<ChartistBar Options=@_options Labels=@_data.Labels>
    @foreach (var seriesData in _data.Series)
    {
        <BarSeries Name=@seriesData.Name SeriesPoints="seriesData.SeriesPoints" />        
    }
</ChartistBar>

@code  {              
    ExtendedChartData _data;   
       
    BarOptions _options = new ()
    {
        AxisY = new AxisYOptions()
        {
            LabelInterpolationFnc = LabelInterpolationOption.TruncateToKMB
        }
    };

    protected override void OnInitialized()
    {           

        _data = new ExtendedChartData()
        {
            Labels = new List<string> { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday" }
        };
        var series = new SeriesData
        {
            Name = "test"
        };
        series.SeriesPoints.Add(new SeriesPoint { X = null, Y = 10, Meta = new PointMetaInfo { Label = "Monday"} });
        series.SeriesPoints.Add(new SeriesPoint { X = null, Y = 100, Meta = new PointMetaInfo{ Label = "Tuesday"}});
        series.SeriesPoints.Add(new SeriesPoint { X = null, Y = 1000, Meta = new PointMetaInfo{ Label = "Wednesday"} });
        series.SeriesPoints.Add(new SeriesPoint { X = null, Y = 100000, Meta = new PointMetaInfo{ Label = "Thursday"} });
        series.SeriesPoints.Add(new SeriesPoint { X = null, Y = 1000000, Meta = new PointMetaInfo{ Label = "Friday"} });
        _data.Series.Add(series);

           

    }

      



}